// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Room {
  id        Int    @id @default(autoincrement())
  name      String
  capacity  Int
  bookings  Booking[]
  events    Event[]
}

model Booking {
  id        Int @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  roomId Int
  room   Room @relation(fields: [roomId], references: [id])
}

model Event {
  id          Int    @id @default(autoincrement())
  title       String
  instructor  String
  date        DateTime
  time        DateTime

  roomId Int
  room   Room @relation(fields: [roomId], references: [id])
}

model ContactInfo {
  id        Int     @id @default(autoincrement())
  location  String
  phone     String
  email     String
  instagram String?
  facebook  String?
  hours     String?
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
